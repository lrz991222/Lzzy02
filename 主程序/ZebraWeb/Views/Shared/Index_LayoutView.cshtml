@using Microsoft.AspNetCore.Identity
@using ELearning.UserAndRole
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="zxx">
<head>
    <title>Home</title>
    <!-- custom-theme -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //custom-theme -->
    <link href="~/Webcss/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Webcss/JiSlider.css" rel="stylesheet" media="all ">
    <link href="~/Webcss/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- font-awesome-icons -->
    <link href="~/Webcss/font-awesome.css" rel="stylesheet" media="all" >
    <!-- //font-awesome-icons -->
    <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
</head>
<body>
    <!-- header -->
    <div class="banner-top">
        <div class="header">
            <div class="container">
                <div class="header-left">
                    <div class="agileinfo-phone">
                        <p>  <img style="padding-bottom:2px" src="~/images/111.png" width="50px" height="50px" /></p>
                    </div>
                    <div class="agileinfo-phone agileinfo-map">
                        <h3 style=" padding-top:9px ;color:burlywood"> Zebra</h3>
                    </div>

                    @if (ViewData["userinfo"] == null)
                    {
                        <div class="clearfix dropdown dropdown-toggle" style=" text-align:right">
                            <a asp-controller="Account" asp-action="Logon">
                                <img alt="" src="~/images/head.jpg" style="width:50px;height:50px;border-radius:50%;margin-top:10px;" />
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="clearfix" style=" text-align:right">
                            <li role="presentation" class="dropdown" id="xia" style="list-style: none;">
                                <a class="dropdown-toggle" data-toggle="dropdown">
                                    <img alt="" src="@ViewBag.img" style="width:50px;height:50px;border-radius:50%;margin-top:10px;" />

                                </a>
                                <ul class="dropdown-menu" style="margin-top:-63px;margin-left:0px;">
                                    <li><a asp-controller="User" asp-action="Index">个人主页</a></li>
                                    <li><a asp-controller="User" asp-action="UserInfo">修改个人信息</a></li>
                                    <li><a href="#">注销</a></li>
                                </ul>
                            </li>
                        </div>

                        @*<div class="clearfix" style=" text-align:right">

                                <a asp-controller="Account" asp-action="Logon" class="username">
                                    <img alt="" src="@ViewBag.img" style="width:50px;height:50px;border-radius:50%;margin-top:10px;" />
                                    <i class="c-icon"></i>

                                </a>
                                <div class="" style="top:18px;left:164px;display:none;">
                                    <a asp-controller="User" asp-action="Index">个人主页</a>
                                    <a asp-controller="User" asp-action="UserInfo">修改个人信息</a>
                                    <a href="#">注销</a>
                                </div>

                            </div>*@

                    }
                </div>
            </div>
        </div>

        <div class="w3_navigation">
            <div class="container">
                <nav class="navbar navbar-default">
                    <div class="navbar-header navbar-left">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <h1><a class="navbar-brand" asp-action="Index" asp-controller="Index"> 斑马 </a></h1>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse navbar-right" id="bs-example-navbar-collapse-1">
                        <nav class="menu menu--iris">
                            <ul class="nav navbar-nav menu__list">
                                <li class="menu__item menu__item--current"><a asp-action="Index" asp-controller="Index" class="menu__link">首页</a></li>
                                <li class="menu__item"><a asp-action="TravelsIndex" asp-controller="Travels" class="menu__link">游记攻略</a></li>
                                <li class="menu__item"><a asp-action="Index" asp-controller="User" class="menu__link">个人页面</a></li>
                                <li class="dropdown menu__item">
                                    <a asp-action="ScenicSpotsIndex" asp-controller="ScenicSpots" class="dropdown-toggle menu__link">景区 </a>
                                </li>

                            </ul>
                        </nav>
                    </div>
                </nav>
            </div>
        </div>
        <!-- //header -->
        <!-- banner -->
        <div class="banner-silder">

            @RenderBody()

        </div>
    </div>

   

</body>
</html>