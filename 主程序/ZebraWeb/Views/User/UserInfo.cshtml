@model ELearning.UserAndRole.ApplicationUser

@{
    ViewData["Title"] = "UserInfo";
    Layout = "~/Views/Shared/Index_LayoutView.cshtml";

}

<div style="text-align:center; margin:auto; ">
    <h1>个人信息</h1>
    <div style="text-align:left;margin-left:500px">
        <a asp-action="Index">返回</a>
    </div>
    <hr />
    <div class="row " style="  text-align:center;padding-left:800px ">
        <div class="col-md-4">
            <form asp-action="UserInfo" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">昵称</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">


                    <div class="col-md-10">
                        <label class="control-label">头像</label>
                        <div id="Page2_caozuoquyu">
                            <input type="file" name="file" asp-for="HerdPortrait" accept="/images/*" id="Page2_caozuoquyu_input" onclick="Click_input()">
                        </div>
                    </div>

                    @*<input  class="form-control" />
                        <span asp-validation-for="HerdPortrait" class="text-danger"></span>*@
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        @if (Model.Sex == true)
                        {
                            <input type="radio" value="true" asp-for="Sex" checked /><span> 男</span>
                            <input type="radio" value="false" asp-for="Sex" /> <span> 女 </span>
                        }
                        else
                        {
                            <input type="radio" value="true" asp-for="Sex" /><span> 男</span>
                            <input type="radio" value="false" asp-for="Sex" checked /> <span> 女 </span>
                        }

                    </label>
                </div>
                <div class="form-group">
                    <label class="control-label">电话</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">邮箱</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="保存" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


</div>

<script src="~/js/jquery-2.1.4.min.js"></script>
<script src="~/js/JiSlider.js"></script>
<script src="/js/jarallax.js"></script>
<script src="/js/SmoothScroll.min.js"></script>
<script src="/js/jquery.waypoints.min.js"></script>
<script src="/js/jquery.countup.js"></script>
<script type="text/javascript" src="/js/move-top.js"></script>
<script type="text/javascript" src="/js/easing.js"></script>
<script src="~/js/js.js" type="text/javascript"></script>
<script type="text/javascript" src="/js/bootstrap-3.1.1.min.js"></script>

<script type="text/javascript" src="/js/jquery.flexisel.js"></script>